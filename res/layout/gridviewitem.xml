<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayOut"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:background="@drawable/corner"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/_s_1"
        android:textSize="@dimen/gridview_title_fontsize" />

    <TextView
        android:id="@+id/txtDetialTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/_2014_07_24_23_31"
        android:textSize="@dimen/gridview_date_fontsize" />

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:lines="10"
        android:text="@string/_s_1"
        android:textSize="@dimen/gridview_content_fontsize" />

</LinearLayout>